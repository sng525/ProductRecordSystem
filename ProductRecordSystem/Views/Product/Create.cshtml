@model ProductRecordSystem.Models.Product;

@{
    ViewData["Title"] = "Create Product";
}


<div class="card">
    <h5 class="card-header">Add Product</h5>
    <div class="card-body">

        <form asp-action="Create" method="Post"  class="p-2">
            <div class="form-group  p-2">
                <label class="form-label">Product Name</label>
                <input asp-for="Name" type="text" class="form-control" required />
            </div>

            <div class="form-group p-2">
                <label class="form-label">Color</label>
                <input asp-for="Color" type="text" class="form-control" />
            </div>

            <div class="form-group p-2">
                <label class="form-label">Size (mm)</label>
                <input asp-for="Size" type="number" class="form-control" />
            </div>

            <div class="form-group p-2">
                <button type="submit" class="btn btn-primary">Save</button>
            </div>

        </form>
    </div>
</div>