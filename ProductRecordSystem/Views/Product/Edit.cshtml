@model ProductRecordSystem.Models.Product;

@{
    ViewData["Title"] = "Edit Product";
}

<div class="card">
    <h5 class="card-header">Edit Product</h5>
    <div class="card-body">

        <form asp-action="Edit" method="post" class="p-2">
            <div class="form-group p-2">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly />
            </div>

            <div class="form-group p-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group p-2">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>

            <div class="form-group p-2">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>

            <div class="form-group p-2">
                <label asp-for="PartNumber" class="control-label"></label>
                <input asp-for="PartNumber" class="form-control" readonly />
                <span asp-validation-for="PartNumber" class="text-danger"></span>
            </div>

            <div class="form-group p-2">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>

        </form>
    </div>
</div>