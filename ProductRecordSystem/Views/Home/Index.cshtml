@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-4 centered-card">
            <div class="card-header text-center" style="font-size: 1.5rem; font-weight: bold; color: #007bff; ">
                WELCOME TO PRODUCT RECORD CENTER!
            </div>
            <img class="card-img" src="~/img/card-bgr.jpg" alt="Card image" />
            <div class="card-body">
                <h5 class="card-title">Manage your product records with ease and efficiency.</h5>
                <a class="nav-link text-black btn btn-outline-primary mb-2" asp-area="" asp-controller="Product"
                    asp-action="Create">Create Product</a>
                <a class="nav-link text-white btn btn-secondary" asp-area="" asp-controller="Product"
                    asp-action="Index">View
                    Products</a>
            </div>

        </div>
    </div>
</div>